<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.aizhonghui.mymvp.SearchActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
       <ImageView
           android:id="@+id/iv_search_tui"
           android:layout_width="26dp"
           android:layout_height="26dp"
           android:layout_marginLeft="16dp"
           android:layout_gravity="center_vertical"
           android:src="@drawable/left_jiantou"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/editback"
            >
            <ImageView
                android:id="@+id/iv_sc_search"
                android:layout_width="16sp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sousuo"/>
            <EditText
                android:id="@+id/et_search"
                android:layout_toRightOf="@+id/iv_sc_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="搜索京东店铺"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ati"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:text="搜索"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="10dp"
        android:text="热搜"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
          <Button
              android:layout_width="wrap_content"
              android:layout_height="30dp"
              android:layout_marginLeft="6dp"
              android:layout_marginRight="6dp"
              android:textColor="#6f7070"
              android:background="#f0f2f5"
              android:text="豆浆机"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#6f7070"
                android:background="#f0f2f5"
                android:text="多层保温饭盒"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#6f7070"
                android:background="#f0f2f5"
                android:text="厨房碗柜"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#6f7070"
                android:background="#f0f2f5"
                android:text="飞科剃须刀"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#6f7070"
                android:background="#f0f2f5"
                android:text="铝框拉杆箱"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textColor="#6f7070"
                android:background="#f0f2f5"
                android:text="活性炭"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f2f5"></View>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="历史搜索"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#ebebeb"></View>

    <ListView
        android:id="@+id/lv_search_hostroy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ebebeb"></View>
    <RelativeLayout
        android:id="@+id/btn_clear_ls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
             android:orientation="horizontal">
            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/menuu"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="20sp"
                 android:layout_gravity="center_vertical"
                 android:text="清空历史搜索"/>
         </LinearLayout>
    </RelativeLayout>

</LinearLayout>
