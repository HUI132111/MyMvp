<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.aizhonghui.mymvp.SearchXqActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_searchxq_tui"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/left_jiantou"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:focusable="true"
            android:background="@drawable/editback"
            >
            <ImageView
                android:id="@+id/iv_scxq_search"
                android:layout_width="16sp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/sousuo"/>
            <EditText
                android:id="@+id/et_searchxq"
                android:layout_toRightOf="@+id/iv_scxq_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="搜索京东店铺"/>
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/ati"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
       <ImageView
           android:id="@+id/iv_search_menu"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_gravity="center_vertical"
           android:layout_marginRight="10dp"
           android:src="@drawable/menug"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_search_zh"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="6dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="综合"/>
        <TextView
            android:id="@+id/tv_search_xl"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#000000"
            android:text="销量"/>
        <TextView
            android:id="@+id/tv_search_jg"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#000000"
            android:text="价格"/>
        <TextView
            android:id="@+id/tv_search_sx"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="#000000"
            android:text="筛选"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"></View>
    <LinearLayout
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="36dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#f0f2f5"
            android:text="京东配送"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:textSize="12sp"

            android:background="#f0f2f5"
            android:text="品牌"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:background="#f0f2f5"
            android:text="前置摄像"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:textSize="12sp"
            android:background="#f0f2f5"
            android:text="后置摄像"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999999"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>


</LinearLayout>
