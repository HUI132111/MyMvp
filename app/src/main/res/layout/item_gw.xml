<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
     <RelativeLayout
         android:id="@+id/re_gw_tou"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="#000000"
             android:textSize="20sp"
             android:layout_centerInParent="true"
             android:padding="10dp"
             android:text="购物车"/>
         <ImageView
             android:id="@+id/iv_gw_xiaoxi2"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_alignParentRight="true"
             android:layout_marginTop="4dp"
             android:layout_marginRight="10dp"
             android:src="@drawable/x_xiaoxi"/>
         <ImageView
             android:id="@+id/iv_gw_bianji"
             android:layout_width="30dp"
             android:layout_height="30dp"
             android:layout_marginRight="20dp"
             android:layout_marginTop="4dp"
             android:layout_toLeftOf="@+id/iv_gw_xiaoxi2"
             android:src="@drawable/x_binaji"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerVertical="true"
             android:layout_toLeftOf="@+id/iv_gw_bianji"
             android:layout_marginRight="8dp"
             android:text="编辑"/>
     </RelativeLayout>
    <View
        android:id="@+id/view_gw_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/re_gw_tou"
        android:background="#dcdcdc"></View>
    <ProgressBar
        android:id="@+id/gw_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_gw"
        android:layout_below="@+id/view_gw_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_mmm"></android.support.v7.widget.RecyclerView>
    <View
        android:id="@+id/view_mmm"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f0f2f5"
        android:layout_above="@+id/re_gw_botton"/>
    <RelativeLayout
        android:id="@+id/re_gw_botton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
         <RelativeLayout
             android:id="@+id/re_go"
             android:layout_width="120dp"
             android:layout_height="50dp"
             android:background="#ff0000"
             android:layout_alignParentRight="true">
             <TextView
                 android:id="@+id/tv_jiesuan"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#ffffff"
                 android:layout_centerInParent="true"
                 android:textSize="20sp"
                 android:text="提交订单"/>
             <TextView
                 android:id="@+id/tv_gw_num"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_toRightOf="@id/tv_jiesuan"
                 android:textColor="#ffffff"
                 android:textSize="15sp"
                 android:layout_alignBottom="@+id/tv_jiesuan"
                 android:text="(0)"/>
         </RelativeLayout>
        <CheckBox
            android:id="@+id/ckb_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:button="@drawable/check_xuan"
            android:layout_alignParentLeft="true"
            android:textColor="#999999"
            android:text="全选"/>

            <TextView
                android:id="@+id/tv_heji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/ckb_quan"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:text="合计:"/>
        <TextView
            android:id="@+id/tv_yyy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/tv_heji"
            android:layout_centerVertical="true"
            android:text=" ¥"/>
        <TextView
            android:id="@+id/tv_gw_zj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/tv_yyy"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="#000000"/>
    </RelativeLayout>
</RelativeLayout>
